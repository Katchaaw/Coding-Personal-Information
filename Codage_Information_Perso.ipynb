  {
   "cell_type": "code",
   "execution_count": 50,
   "metadata": {},
   "outputs": [
    {
     "name": "stdout",
     "output_type": "stream",
     "text": [
      "Homme\n",
      "Français\n",
      "Marié/Concubin\n",
      "0 enfant\n"
     ]
    }
   ],
   "source": [
    "#nombre de lignes: 20\n",
    "slt=8\n",
    "entr=list(bin(eval(input('Rentrez le code '))))\n",
    "\n",
    "while(len(entr)<=9):\n",
    "    entr.insert(2, '0')\n",
    "\n",
    "bine=int(''.join(entr[2:6]), 2)\n",
    "val=['Homme', 'z', 'Étranger', 'Français', 'Célibataire', 'Marié/Concubin']\n",
    "val2=['z', 'Femme', 'Étrangère', 'Française', 'Célibataire', 'Mariée/Concubine']\n",
    "\n",
    "if sum(int(i) for i in entr[2:len(entr)-1])%2!=int(entr[-1]):\n",
    "        print('Invalide')\n",
    "        exit\n",
    "\n",
    "if entr[-2]=='1':\n",
    "        val=val2\n",
    "\n",
    "for i in range(3):\n",
    "    print(val[int(entr[slt])])\n",
    "    slt=slt-1\n",
    "    del val[:2]\n",
    "    \n",
    "if bine>1:\n",
    "    print(bine, 'enfants')\n",
    "else:\n",
    "    print(bine, 'enfant')"
   ]
